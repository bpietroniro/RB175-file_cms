<form id="edit" action="/<%= @file_name %>" method="post">
  <label for="content">Edit the content of: <%= @file_name %></label>
  <div>
    <textarea name="content" id="content" cols=80 rows=20><%= @contents %></textarea>
  </div>
  <button type="submit">Save Changes</button>
  <a href="/">Cancel</a>
</form>
